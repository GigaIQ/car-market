<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="artem">

        <createTable tableName="user">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_pkey"/>
            </column>
            <column name="login" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="listings" type="">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="listing">
            <column name="listingId" autoIncrement="true" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="listing_pkey"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="price" type="BIGINT">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="car" type="">
                <constraints nullable="false" unique="false" foreignKeyName=""/>
                <!--                ?-->
            </column>
            <column name="listingDate" type="Timestamp">
                <constraints nullable="false" unique="false" />
            </column>
            <column name="userId" type="BIGINT">
                <constraints nullable="false" unique="false" foreignKeyName="user_pkey"/>
                <!--                ?-->
            </column>
        </createTable>

        <createTable tableName="userFavorite">
            <column name="userId" type="BIGINT">
                <constraints nullable="false" unique="false"/>
                <!--                ?????-->
            </column>
            <column name="listingId" type="BIGINT">
                <constraints nullable="false" unique="false"/>
                <!--                ?????-->
            </column>
        </createTable>

        <createTable tableName="car">
            <column name="carId" autoIncrement="true" type="BIGINT">
                <constraints nullable="false" unique="true" primaryKey="true" primaryKeyName="carId_pkey"/>
                <!--                ?-->
            </column>
            <column name="markId" type="BIGINT">
                <constraints nullable="false" unique="false" foreignKeyName="mark_pkey"/>
                <!--                ?-->
            </column>
            <column name="modelId" type="BIGINT">
                <constraints nullable="false" unique="false" foreignKeyName="model_pkey"/>
                <!--                ?-->
            </column>
            <column name="gearboxId" type="BIGINT">
                <constraints nullable="false" unique="false" foreignKeyName="gearbox_pkey"/>
                <!--                ?-->
            </column>
            <column name="transmissionId" type="BIGINT">
                <constraints nullable="false" unique="false" foreignKeyName="transmission_pkey"/>
                <!--                ?-->
            </column>
            <column name="typeId" type="BIGINT">
                <constraints nullable="false" unique="false" foreignKeyName="type_pkey"/>
                <!--                ?-->
            </column>
            <column name="distance" type="BIGINT">
                <constraints nullable="false" unique="false"/>
                <!--                ?-->
            </column>
            <column name="Year" type="INT">
                <constraints nullable="false" unique="false"/>
                <!--                ?-->
            </column>
            <column name="damage" type="BOOLEAN">
                <constraints nullable="false" unique="false"/>
                <!--                ?-->
            </column>
        </createTable>

        <createTable tableName="mark">
            <column name="markId" autoIncrement="true" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="mark_pkey"/>
            </column>
            <column name="markName" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="gearbox">
            <column name="gearboxId" autoIncrement="true" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="gearbox_pkey"/>
            </column>
            <column name="gearboxName" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="transmission">
            <column name="transmissionId" autoIncrement="true" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="transmission_pkey"/>
            </column>
            <column name="transmissionName" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="model">
            <column name="modelId" autoIncrement="true" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="model_pkey"/>
            </column>
            <column name="modelName" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <createTable tableName="fuelType">
            <column name="fuelTypeId" autoIncrement="true" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="fuelType_pkey"/>
            </column>
            <column name="fuelTypeName" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>